<div
  class="pricing-header px-3 py-3 pt-md-5 mx-auto text-center d-flex justify-content-center"
>
  <h1 class="display-4">会社一覧</h1>
</div>


<div class="container">
  <div class="row justify-content-center">
    <div class="col-sm-6 px-0 mt-3">
      <ul class="list-group">
        <% for(var j in companyDetail){ %>
          <li class="list-group-item">
            <div class="row">
              <div class="col-md-7">
              <% if(companyDetail[j].name == ""){ %>
                <%- companyDetail[j].u_email %>
              <% }else{ %> 
                <%- companyDetail[j].name %>
              <% } %>
              </div>
              <div class="col-md-2 text-center">
                <a
                  href="/company/companyDetail/<%- companyDetail[j].u_email %>"
                  class="card-link btn btn-primary btn-sm"
                >
                  詳細
                </a>
              </div>
              <div class="col-md-3 text-center">
                <form method="post" action="http://localhost:3000/company/companyFollow">
                  <input type="hidden" name="email" value="<%- companyDetail[j].u_email %>">
                  <button type="submit" class="btn btn-primary btn-sm">フォロー</button>
                </form>
              </div>
            </div>
          </li>
        <% } %>
      </ul>
    </div>
  </div>
</div>